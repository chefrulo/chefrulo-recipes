<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_recipe" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.recipe</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Recipes" string="Recipes" name="chefrulo_recipe" groups="base.group_system">
                    <block title="Cost Rates" name="recipe_cost_rates">
                        <setting string="Labor Rate" help="Cost per hour of labor">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="recipe_labor_rate" class="col-lg-3"/>
                                    <field name="recipe_labor_rate" class="col-lg-3"/>
                                    <span class="col-lg-3"> per hour</span>
                                </div>
                            </div>
                        </setting>
                        <setting string="Energy Rate" help="Cost per hour of energy usage (gas, electricity)">
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="recipe_energy_rate" class="col-lg-3"/>
                                    <field name="recipe_energy_rate" class="col-lg-3"/>
                                    <span class="col-lg-3"> per hour</span>
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
